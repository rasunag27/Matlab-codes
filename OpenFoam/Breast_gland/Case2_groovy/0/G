FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      G;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    Bottom
    {
        type            MarshakRadiation;
        value           uniform 0;
    }

    circumference
    {
        type            MarshakRadiation;
        value           uniform 0;
    }

    left
    {
        type            symmetryPlane;
    }

    behind
    {
        type            empty;
    }

    ahead
    {
        type            empty;
    }
}

