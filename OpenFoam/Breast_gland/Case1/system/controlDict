FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     buoyantBoussinesqPimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1; //2000;

deltaT          0.001; //2;

writeControl    timeStep;

writeInterval   25; //200;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  no;

maxCo           0.5;


functions
{
    temparature
    {
        type            probes;
        functionObjectLibs ("libsampling.so");
        writeControl   timeStep;
        writeInterval  10;
        probeLocations
        (
            ( 0 0.042 0)
            ( 0 0.052 0 )
            ( 0 0.062 0)
            (0 0.072 0)
        );
        fields
        (
            T
        );
    }
}
